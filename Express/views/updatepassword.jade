extends layout 

block content 
    head 
        h1 Reset password  
    body 
        form(method='post' action='/users/updatepassword' )
            p
                input(type="hidden" value='#{token}' name="token")
                label 
                    | New password    
                input(type='password' name='password' placeholder="Enter your email", required)
            br    
            button(type="submit" class='loginBtn') Change password 
            